@model PropertyRentalMarketplace.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}


<h1>SignUp Form</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-controller="Account" asp-action="Login" enctype="multipart/form-data" method="post">
			<input class="text" asp-for="Email" placeholder="Email" required="" style="margin:10px 0px"> 
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />
			<input class="text" asp-for="Password" placeholder="Password" required="" style="margin:10px 0px"> 
			<span asp-validation-for="Password" class="text-danger m-2" ></span>
			<br />
			<div class="wthree-text" style="height:38px;">
				<label class="anim" style="height:27px;">
					<input asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span> <br/><br/>
					<span asp-validation-for="RememberMe" class="text-danger m-2"></span> 
					<div asp-validation-summary="All" class="text-danger " style="margin-top:-30px"></div> <br />

				</label>
			</div>

			<input type="submit" value="SIGNIN" style="margin:10px 0px 10px 0px">
		</form>
		<p>Don't have an Account? <a asp-controller="Account" asp-action="Register" asp-route-role="@AppRoles.User">Sign Up Now!</a></p>
		<p style="text-align:center; margin-bottom:10px"><a asp-controller="Account" asp-action="ForgetPassword">Forget Password</a></p>
		
		<div class="d-flex justify-content-center">
			<a href="@Url.Action("ExternalLogin", "Account", new { provider = "Google" })"
			   class="btn m-3 fs-6 google-btn" style="background-color:#847d7d; color:white">
				Sign in with Google
			</a>
		</div>
	</div>
</div>


@section ValidationScript {
	<partial name="_ValidationScriptsPartial" />
}