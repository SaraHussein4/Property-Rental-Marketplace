
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "_Layout";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card p-4 shadow rounded" style="width: 400px;">
        <h4 class="mb-3 text-center">Forgot Password</h4>
        <p class="text-muted text-center">Enter your email address and we'll send you a link to reset your password.</p>

        <form asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" name="Email" class="form-control" id="email" placeholder="you@example.com" required>
            </div>

            <button type="submit" class="btn btn-dark w-100">Send Reset Link</button>
        </form>

        <div class="mt-3 text-center">
            <a href="@Url.Action("PhoneLogin", "Account")" class="text-secondary text-decoration-none">Back to Login</a>
        </div>
    </div>
</div>

