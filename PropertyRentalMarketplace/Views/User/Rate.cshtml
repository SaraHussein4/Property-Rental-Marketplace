@model UserRateViewModel
@{
    ViewData["Title"] = "Rate";
    Layout = "_Layout";
}

<form asp-action="Rate" asp-controller="User" method="post">
    <!-- Hidden field for BookingId (if needed) -->
    <input type="hidden" asp-for="BookingId" />

    <h3>Rate Your Experience</h3>

    <!-- Overall Rating -->
    <div class="form-group">
        <label asp-for="OverallRating">Overall Rating*</label>
        <select asp-for="OverallRating" class="form-control" required>
            <option value="">Select Rating (1-5)</option>
            <option value="1">1 - Poor</option>
            <option value="2">2 - Fair</option>
            <option value="3">3 - Good</option>
            <option value="4">4 - Very Good</option>
            <option value="5">5 - Excellent</option>
        </select>
        <span asp-validation-for="OverallRating" class="text-danger"></span>
    </div>

    <!-- Category Ratings -->
    <div class="form-group">
        <label asp-for="AmenitiesRating">Amenities Rating*</label>
        <input asp-for="AmenitiesRating" type="range" min="1" max="5" step="1" class="form-range">
        <span asp-validation-for="AmenitiesRating" class="text-danger"></span>
 <!-- Dynamic value display -->
    </div>

    <!-- Repeat for other ratings (same structure) -->
    <div class="form-group">
        <label asp-for="CommunicationRating">Communication Rating*</label>
        <input asp-for="CommunicationRating" type="range" min="1" max="5" step="1" class="form-range">
        <span asp-validation-for="CommunicationRating" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="ValueForMoneyRating">Value for Money*</label>
        <input asp-for="ValueForMoneyRating" type="range" min="1" max="5" step="1" class="form-range">
        <span asp-validation-for="ValueForMoneyRating" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="HygieneRating">Hygiene Rating*</label>
        <input asp-for="HygieneRating" type="range" min="1" max="5" step="1" class="form-range">
        <span asp-validation-for="HygieneRating" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="LocationRating">Location Rating*</label>
        <input asp-for="LocationRating" type="range" min="1" max="5" step="1" class="form-range">
        <span asp-validation-for="LocationRating" class="text-danger"></span>

    </div>

    <!-- Review Text -->
    <div class="form-group">
        <label asp-for="Review">Your Review</label>
        <textarea asp-for="Review" class="form-control" rows="4" placeholder="Share your experience..."></textarea>
        <span asp-validation-for="Review" class="text-danger"></span>

    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Submit Rating</button>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}