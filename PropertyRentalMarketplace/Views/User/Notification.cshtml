
@model List<Notification>

@{
    Layout = "_UserLayout";
    ViewBag.Title = "Notifications";
}
<style>
    .notification-section {
        margin-top: 100px;
        min-height: 85vh;
    }

    .notification-card {
        border: none;
        border-radius: 12px;
        background-color: #EFF0F2;
        padding: 0;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .notification-header {
        background-color: #484848;
        color: #ffffff;
        padding: 20px 25px;
        font-size: 1.25rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        text-align: center;
    }

    .notification-item {
        background-color: #ffffff;
        padding: 20px 25px;
        border-bottom: 1px solid #ddd;
        border-left: 4px solid #484848;
        margin-bottom: 0;
    }

    .notification-title {
        font-weight: 600;
        font-size: 1.05rem;
        color: #484848;
        margin-bottom: 5px;
    }

    .notification-content {
        font-size: 0.95rem;
        color: #666666;
    }

    .notification-date {
        font-size: 0.8rem;
        color: #9A9A9A;
        margin-top: 8px;
    }

    .notification-item a.btn-dark {
        background-color: #484848;
        border: none;
    }

        .notification-item a.btn-dark:hover {
            background-color: #333333;
        }

    .notification-empty {
        background-color: #EFF0F2;
        color: #484848;
        border: 1px solid #9A9A9A;
        padding: 40px 20px;
        font-size: 1rem;
        border-radius: 0 0 12px 12px;
    }
</style>

<div class="container notification-section">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class="notification-card">
                <div class="notification-header">All Notifications</div>

                @if (Model == null || !Model.Any())
                {
                    <div class="notification-empty text-center">
                        <strong>No notifications available.</strong><br />
                        You don’t have any notifications at the moment.
                    </div>
                }
                else
                {
                    foreach (var notification in Model)
                    {
                        <div class="notification-item">
                            <div class="notification-title">@notification.Title</div>
                            <div class="notification-content">@notification.Content</div>
                            <div class="mt-2 d-flex justify-content-between align-items-center flex-wrap gap-2">
                                <a asp-action="Rate" asp-controller="User" asp-route-bookingId="@notification.BookingId" class="btn btn-sm btn-dark">
                                    Click To Rate
                                </a>
                                <div class="notification-date">@notification.CreatedAt.ToString("dd MMM yyyy")</div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
