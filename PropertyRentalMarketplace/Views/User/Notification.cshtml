@model List<Notification>

@{
    Layout = "_UserLayout";
    ViewBag.Title = "Notifications";
}

<style>
    .notification-section{
        margin-top: 100px;
        min-height: 85vh;
    }
    .notification-card {
        border: 1px solid #e2e2e2;
        border-radius: 8px;
        background-color: #ffffff;
        /* max-width: 600px; */
        margin: 20px auto;
        overflow: hidden;
    }

    .notification-header {
        background-color: #E8EAEC;
        padding: 25px 20px;
        font-weight: bold;
        font-size: 20px;
    }

    .notification-item {
        padding: 15px 20px;
        border-top: 1px solid #f1f1f1;
    }

    .notification-title {
        font-weight: 500;
        margin-bottom: 5px;
        color: #484848;
    }

    .notification-content {
        font-size: 0.95rem;
        color: #333;
    }

    .notification-date {
        font-size: 0.8rem;
        color: #9A9A9A;
        margin-top: 5px;
    }
</style>

<div class="container notification-section">
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="notification-card">
                <div class="notification-header">All Notifications</div>

                @foreach (var notification in Model)
                {
                    <div class="notification-item">
                        <div class="notification-title">@notification.Title</div>
                        <div class="notification-content">
                            @notification.Content
                        </div>
                        <div>
                            <a asp-action="Rate" asp-controller="User" asp-route-bookingId="@notification.BookingId">Click To Rate</a>
                        </div>
                        
                        <div class="notification-date">@notification.CreatedAt.ToString("dd MMM yyyy")</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>