
@{
    ViewData["Title"] = "ComingSoon";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Coming Soon | Your App Name</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Our professional solution is launching soon. Stay informed about our release." />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/coming-soon.css" />
</head>
<body>
    <div class="coming-soon-container">
        <div class="content">
            <div class="logo">
                <i class="fas fa-briefcase"></i>
                <span>Homelo Mobile App</span>
            </div>

            <h1>Professional Solution Coming Soon</h1>
            <p class="subtitle">We're preparing a powerful tool to enhance your productivity. Launching soon.</p>

            <div class="countdown">
                <div class="countdown-item">
                    <span id="days">00</span>
                    <small>Days</small>
                </div>
                <div class="countdown-item">
                    <span id="hours">00</span>
                    <small>Hours</small>
                </div>
                <div class="countdown-item">
                    <span id="minutes">00</span>
                    <small>Minutes</small>
                </div>
                <div class="countdown-item">
                    <span id="seconds">00</span>
                    <small>Seconds</small>
                </div>
            </div>

            <form class="notify-form">
                <input type="email" placeholder="Your professional email" required />
                <button type="submit">Get Early Access <i class="fas fa-arrow-right"></i></button>
            </form>

            <div class="social-links">
                <a href="#"><i class="fab fa-linkedin-in"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-github"></i></a>
                <a href="#"><i class="fas fa-envelope"></i></a>
            </div>
        </div>
    </div>

    <button onclick="window.history.back();" class="return-button">
        <i class="fas fa-arrow-left"></i> Return
    </button>
	<script src="~/js/comingsoon.js"></script>
</body>
</html>
