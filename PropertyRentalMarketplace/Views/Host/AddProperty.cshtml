@model HostAddPropertyViewModel
@{
    ViewData["Title"] = "AddProperty";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link rel="stylesheet" href="~/css/host/addProperty.css" />

}


<h1>
    Listing Information
</h1>

<form method="post">
    <div class="row">
        <div class="mb-3 col-md-6 col-lg-4">
            <label for="d" class="form-label fw-bold">Title</label>
            <div class="input-group mb-3">
                <input type="text" class="form-control" aria-label="">
            </div>
        </div>
        <div class="mb-3 col-md-6 col-lg-4">
            <label for="d" class="form-label fw-bold">Monthly Rent</label>
            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input type="text" class="form-control" aria-label="">
                <span class="input-group-text">Per Month</span>
            </div>
        </div>
        <div class="mb-3 col-md-6 col-lg-4">
            <label for="d" class="form-label fw-bold">Square footage</label>
            <div class="input-group mb-3">
                <input type="number" class="form-control" aria-label="">
                <span class="input-group-text">sq. ft.</span>
            </div>
        </div>
        <div class="mb-3 col-12">
            <label for="d" class="form-label fw-bold">Description</label>
            <div class="input-group mb-3">
                <textarea class="form-control" aria-label="" rows="6"></textarea>
            </div>
        </div>
    </div>

    <div class="row">
    </div>

    <div class="row">
        <div class="mb-3 col-sm-6  col-md-4 col-lg-3">
            <label for="" class="form-label fw-bold">Bedrooms</label>
            <select class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
        <div class="mb-3 col-sm-6 col-md-4 col-lg-3">
            <label for="" class="form-label fw-bold">Bathrooms</label>
            <select class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
        <div class="mb-3 col-sm-6  col-md-4 col-lg-3">
            <label for="" class="form-label fw-bold">Parking</label>
            <select class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
        <div class="mb-3 col-sm-6  col-md-4 col-lg-3">
            <label for="" class="form-label fw-bold">Bets</label>
            <select class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
    </div>

    <div class="row countriesparent" data-countries="@Html.Raw(Json.Serialize(Model.countries))">
        <div class="mb-3 col-md-4">
            <label for="" class="form-label fw-bold">Country</label>
            <select class="form-select countries" aria-label="Default select example" >
                @foreach(var country in Model.countries){
                   <option value="@country.Code">@country.Name</option>
                } 
            </select>
            <input type="hidden" id="latitude" name="latitude">
            <input type="hidden" id="longitude" name="longitude">
        </div>
        <div class="mb-3 col-md-8" id="map" style="height: 400px; width: 100%;"></div>
    </div>

    <div>
        <h2>Amenities & Safeties</h2>
        <div class="amenities">
            <div class="form-group row mb-3">
                <label class="col-form-label fw-bold">Amenities</label>
                <div class="">
                    @foreach (var amenity in Model.amenities)
                    {
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="Amenities"
                                    value="@amenity"
                            @(Model.Amenities != null && Model.Amenities.Contains(amenity.Id) ? "checked"
                                : "") />
                            <label class="form-check-label">@amenity.Name</label>
                        </div>
                    }
                </div>
            </div>  
        </div>

        <div class="safeties">
            <div class="form-group row mb-3">
                <label class="col-form-label fw-bold">Safeties</label>
                <div class="">
                    @foreach (var safety in Model.safeties)
                    {
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" name="Safeties"
                                   value="@safety"
                            @(Model.Safeties != null && Model.Safeties.Contains(safety.Id) ? "checked"
                                : "") />
                            <label class="form-check-label">@safety.Name</label>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="mb-3 col-sm-6  col-md-4 col-lg-3">
            <label for="" class="form-label fw-bold">Bedrooms</label>
            <select class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>

            </select>
        </div>
        <div class="mb-3 col-sm-6 col-md-4 col-lg-3">
            <label for="" class="form-label fw-bold">Bathrooms</label>
            <select class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
        <div class="mb-3 col-sm-6  col-md-4 col-lg-3">
            <label for="" class="form-label fw-bold">Parking</label>
            <select class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
        <div class="mb-3 col-sm-6  col-md-4 col-lg-3">
            <label for="" class="form-label fw-bold">Bets</label>
            <select class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
    </div>
</form>
    


  



@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="~/js/host/addProperty.js"></script> 
}

